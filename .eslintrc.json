{
    "extends": [
        "airbnb-base",
        "airbnb-flow"
    ],
    "plugins": [
        "import",
        "flowtype"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            4
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": true
            }
        ]
    },
    "env": {
        "jest": true
    }
}